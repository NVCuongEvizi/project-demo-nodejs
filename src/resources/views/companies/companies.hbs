<div class="companies-container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">#ID</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Website</th>
        <th scope="col">Logo</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each companies}}
        <tr>
          <td>{{sum @index 1}}</td>
          <th scope="row"><a href="/companies/{{this.slug}}">{{this._id}}</a></th>
          <td>{{this.name}}</td>
          <td>{{this.address}}</td>
          <td>{{this.website}}</td>
          <td><img src={{this.logo}} alt={{this.name}}></td>
          <td>
            <a class="btn btn-primary" href="/companies/{{this._id}}/edit">Update</a>
            <a class="btn btn-danger ms-2" href="/companies/{{this._id}}/delete">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>